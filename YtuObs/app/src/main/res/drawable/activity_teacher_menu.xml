<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B3F59B5">

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Rapor Görüntüleme" />

        <ImageButton
            android:id="@+id/imageButtonRaporOgretmen"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#C42D3F77"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/uyaritr" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/YTU"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ytu"
        tools:srcCompat="@drawable/ytu" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="Yıldız Teknik Üniversitesi Öğretmen Sistemi"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/YTU"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Öğrenci işlemleri" />

        <ImageButton
            android:id="@+id/imageButtonOgrenciOgretmen"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#C42D3F77"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ogrencitr" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Ders Listele" />

        <ImageButton
            android:id="@+id/imageButtonDersListeleOgretmen"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#C42D3F77"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/listetr" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/YTU">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Bilgilerim" />

        <ImageButton
            android:id="@+id/ImageButtonBilgilerimOgretmen"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#C42D3F77"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/usertr" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/YTU">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Ders ekle/sil/güncelle" />

        <ImageButton
            android:id="@+id/imageButtonDersEkleSilOgretmen"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#C42D3F77"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/derstr" />
    </RelativeLayout>

    <!-- Dikey ortalamayı ayarla -->


</androidx.constraintlayout.widget.ConstraintLayout>
